<Window x:Class="WpfApplication.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sample="clr-namespace:WpfApplication.Sample"
        xmlns:s="clr-namespace:Settings.Binding.Wpf.Markup;assembly=Settings"
        Title="MainWindow"
        Width="{s:Setting WindowWidth}"
        Height="{s:Setting WindowHeight}"
        Left="{s:Setting WindowLeft}"
        Top="{s:Setting WindowTop}"
        WindowState="{s:Setting WindowState}"
        s:Settings.Namespace="{s:Namespace Test}"
        DataContext="Test">
    <Grid x:Name="Grid"
          s:Settings.Namespace="{s:Namespace Grid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Settings namespaces:" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"> 
            <TextBlock Text="TextBox inside Window: "/>
            <TextBlock Text="{Binding (s:Settings.Namespace),
                                 RelativeSource={RelativeSource Self}}"/>
        </StackPanel>
        <sample:UserControl1 Grid.Row="2" />
        <sample:UserControl2 Grid.Row="3" />
    </Grid>
</Window>
