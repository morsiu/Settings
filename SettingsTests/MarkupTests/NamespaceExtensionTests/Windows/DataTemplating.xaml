<Window x:Class="TheSettingsTests.MarkupTests.NamespaceExtensionTests.Windows.DataTemplating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="clr-namespace:TheSettings.Binding.Wpf.Markup;assembly=Settings"
             mc:Ignorable="d" 
             s:Settings.Namespace="{s:Namespace Root}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Window.Resources>
        <DataTemplate x:Key="Template">
            <Grid DataContext="{s:Setting Test}" />
        </DataTemplate>
    </Window.Resources>
    <ContentPresenter x:Name="Content" Content="Test" ContentTemplate="{StaticResource Template}" />
</Window>
