<Window x:Class="TheSettingsTests.MarkupTests.SettingExtensionTests.Windows.DataGridColumnsBindingInitialization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="http://thesettings.org/v1"
        d:DesignHeight="300"
        d:DesignWidth="300"
        s:Settings.Namespace="{s:Namespace Namespace}"
        mc:Ignorable="d">
    <DataGrid x:Name="DataGrid">
        <DataGrid.Columns>
            <!-- Column names are hardcoded in test, column order is also depended upon in the test -->
            <DataGridTextColumn Header="A"/>
            <DataGridTextColumn Header="B"/>
            <DataGridTextColumn Header="C"/>
            <DataGridTextColumn Header="D"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
