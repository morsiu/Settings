<Window x:Class="Sample.View.DataGridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="http://thesettings.org/v1"
        xmlns:local="clr-namespace:Sample.View"
        mc:Ignorable="d"
        s:Settings.Namespace="{s:Namespace DataGrid}"
        Title="DataGridWindow" Height="300" Width="500">
    <Grid>
        <DataGrid>
            <s:Settings.Settings>
                <s:DataGridColumnsBinding/>
            </s:Settings.Settings>
        <DataGrid.Columns>
            <DataGridTextColumn Header="Column0"/>
            <DataGridTextColumn Header="Column1"/>
            <DataGridTextColumn Header="Column2"/>
            <DataGridTextColumn Header="Column3"/>
            <DataGridTextColumn Header="Column4"/>
            <DataGridTextColumn Header="Column5"/>
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
