<Window x:Class="Sample.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="http://thesettings.org/v1"
        xmlns:views="clr-namespace:Sample.View"
        Title="MainWindow"
        Width="{s:Setting WindowWidth}"
        Height="{s:Setting WindowHeight}"
        DataContext="Test"
        Left="{s:Setting WindowLeft}"
        Top="{s:Setting WindowTop}"
        WindowState="{s:Setting WindowState}"
        s:Settings.Namespace="{s:Namespace Test}">
    <Grid x:Name="Grid"
          s:Settings.Namespace="{s:Namespace Grid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Settings namespaces:" />
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <TextBlock Text="TextBox inside Window: " />
            <TextBlock Text="{Binding (s:Settings.Namespace),
                                      RelativeSource={RelativeSource Self}}" />
        </StackPanel>
        <views:UserControl1 Grid.Row="2" />
        <views:UserControl2 Grid.Row="3" />
    </Grid>
</Window>
